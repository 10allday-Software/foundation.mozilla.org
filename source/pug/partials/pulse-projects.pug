mixin projects(projectData, includeJSON)
  - let json = includeJSON ? projectData : false

  .row.mb-5.pulse-projects(data-json=json)
    each project, index in projectData
      +project(projectData[index])

mixin project(meta)
  .col-sm-4.mb-3.p-3
    img.mb-3(src=meta.thumbnail_url)
    p.h4-medium-black=meta.title
    p.small-gray=`By ${meta.creators.join(`, `)}`
    p.body-black=meta.description
    a.cta-link(href=meta.content_url) Read More
