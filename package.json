{
  "name": "mozilla-leadership-network",
  "repository": "https://github.com/mozilla/network",
  "issues": "https://github.com/mozilla/network/issues",
  "version": "1.0.0",
  "description": "Mozilla Leadership Network",
  "scripts": {
    "autoprefix": "node scripts/autoprefix.js",
    "build:images": "shx rm -rf dest/_images && shx cp -r source/images dest/_images",
    "build:js": "shx mkdir -p dest/_js && webpack",
    "build:pug": "node scripts/build-pug.js",
    "build:sass": "shx mkdir -p dest/_css && node-sass source/sass/main.scss dest/_css/main.compiled.css && npm run autoprefix",
    "build": "shx rm -rf dest && run-p build:**",
    "server": "live-server ./dest --port=2017",
    "stage": "npm i && shx rm -rf dest && npm run build:images && npm run build:js && npm run build:pug -- --staging && npm run build:sass && node scripts/stage.js",
    "start": "npm i && npm run build && run-p server watch:**",
    "test:eslint": "eslint --config ./.eslintrc.yaml scripts/*.js source/js/*.js",
    "test:pug": "pug-lint source/pug/**/*.pug",
    "test:scss": "stylelint 'source/sass/main.scss' --syntax scss",
    "test": "run-s test:**",
    "watch:images": "chokidar 'source/images/*' -c 'npm run build:images'",
    "watch:js": "chokidar 'source/js/*.js' -c 'npm run build:js'",
    "watch:pug": "chokidar 'source/pug/*/**.pug' 'locales/**/*.properties' -c 'npm run build:pug'",
    "watch:sass": "chokidar 'source/sass/main.scss' -c 'npm run build:sass'"
  },
  "author": "Mozilla",
  "license": "MPL-2.0",
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "java.properties.js": "^1.0.2",
    "live-server": "^1.1.0",
    "mofo-style": "^2.4.0",
    "node-sass": "^4.1.1",
    "npm-run-all": "^3.1.1",
    "postcss": "^5.1.2",
    "postcss-cli": "^2.3.3",
    "pug": "^2.0.0-beta5",
    "pug-lint": "^2.3.0",
    "shelljs": "^0.7.3",
    "shx": "^0.2.1",
    "stylelint": "^7.7.0",
    "stylelint-config-standard": "^15.0.1",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "mofo-bootstrap": "2.0.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "pugLintConfig": {
    "disallowHtmlText": true,
    "disallowIdAttributeWithStaticValue": true,
    "disallowMultipleLineBreaks": true,
    "requireClassLiteralsBeforeAttributes": true,
    "validateIndentation": 2,
    "validateLineBreaks": "LF"
  }
}
