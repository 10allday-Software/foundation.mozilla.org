extends ../templates/master.pug

block content
  .container
    .row
      .col-12.pb-5
        h1 Style Guide
        h2 Typography

        h3.my-5 Headers

        div: h1.h1-home-white .h1-home-white
        div: h1.h1-white .h1-white
        div: h2.h2-headings-white .h2-headings-white
        div: h2.h2-typeaccents-gray .h2-typeaccents-gray
        div: h3.h3-black .h3-black
        div: h3.h3-cta-black .h3-cta-black
        div: h4.h4-medium-black .h4-medium-black
        div: h4.h4-medium-white .h4-medium-white
        div: h4.h4-light-black .h4-light-black
        div: h4.h4-headingcontract-black .h4-headingcontract-black
        div: h5.h5-black .h5-black
        div: h6.h6-gray .h6-gray
        div: h6.h6-white .h6-white

        h3.my-5 Paragraphs

        div: p.lead-black .lead-black
        div: p.blockquote-gray .blockquote-gray
        div: p.body-black .body-black
        div: p.body-white .body-white
        div: p.italic-black .italic-black
        div: p.small-gray .small-gray
        div: p.small-white .small-white

        h3.my-5 Anchors

        div: a.body-link(href=`#`) .body-link
        div: a.link-small(href=`#`) .link-small
        div: a.cta-link(href=`#`) .cta-link

        h3.my-5 Buttons

        div: button.btn.btn-outline-primary .btn-outline-primary
